             xmlns:mail="http://osafoundation.org/parcels/osaf/contentmodel/mail"
             xmlns:doc="http://osafoundation.org/parcels/osaf/framework/blocks/detail">

  <core:version>0.3</core:version>
  
  <!--
    Events
  -->
  
  <BlockEvent itsName="ButtonPressed">
    <blockName>ButtonPressed</blockName>
    <destinationBlockReference itemref="doc:MarkupBar"/>
  </BlockEvent>
    
  <BlockEvent itsName="TogglePrivate">
    <blockName>TogglePrivate</blockName>
    <destinationBlockReference itemref="doc:MarkupBar"/>
  </BlockEvent>
  
  <BlockEvent itsName="ToggleAllDay">
    <blockName>ToggleAllDay</blockName>
    <destinationBlockReference itemref="doc:EditAllDay"/>
  </BlockEvent>
  
  <BlockEvent itsName="ToggleSharingActive">
    <blockName>ToggleSharingActive</blockName>
    <destinationBlockReference itemref="doc:EditSharingActive"/>
  </BlockEvent>
  
  <BlockEvent itsName="ReminderChanged">
    <blockName>ReminderChanged</blockName>
    <destinationBlockReference itemref="doc:EditReminder"/>
  </BlockEvent>

  <BlockEvent itsName="TransparencyChanged">
    <blockName>TransparencyChanged</blockName>
    <destinationBlockReference itemref="doc:EditTransparency"/>
  </BlockEvent>

  <BlockEvent itsName="AcceptShare">
    <blockName>AcceptShare</blockName>
    <destinationBlockReference itemref="doc:AcceptShareButton"/>
  </BlockEvent>

  <!--
    An item collection we use to get notifications about the DV
  -->  
  <content:ItemCollection itsName="DetailViewSelectedItemCollection">
    <displayName>DetailViewSelectedItemCollection</displayName>
    <indexName value="dvSelectedItem"/>
    <_rule value=""/> <!-- the selected item will get added to inclusions at runtime. -->
  </content:ItemCollection>
  
  <!--
    Layout blocks
  -->
  
  <!-- The DetailTrunkCache starts each specific DetailTrunk by cloning this stub. -->
  <DetailRoot itsName="DetailTrunkStub"
              itemClass="osaf.framework.blocks.detail.Detail.DetailRoot">
    <blockName value="DetailTrunkStub"/>
    <!-- Attributes -->
    <orientationEnum>Vertical</orientationEnum>
    <size>80,20</size>
    <minimumSize>80,40</minimumSize>
    <eventBoundary>True</eventBoundary>
    <contents itemref="doc:DetailViewSelectedItemCollection"/>
  </DetailRoot>

  <!-- All our subtrees are of this kind, so we can find 'em. -->
  <core:Kind itsName="DetailTrunkSubtree">
    <superKinds itemref="TrunkSubtree"/>
  </core:Kind>

  <!-- 
  Trees of blocks
  -->
  
  <!-- Note -->
  <doc:DetailTrunkSubtree itsName="NoteSubtree">
    <key itemref="content:Note"/>
    <rootBlocks itemref="doc:MarkupBar"/>
    <rootBlocks itemref="doc:HeadlineBlock"/>
    <rootBlocks itemref="doc:NotesArea"/>
  </doc:DetailTrunkSubtree>

  <!-- Calendar Event -->
  <doc:DetailTrunkSubtree itsName="CalendarEventSubtree">
    <key itemref="calendar:CalendarEventMixin"/>
    <rootBlocks itemref="doc:CalendarDetails"/>
  </doc:DetailTrunkSubtree>

  <!-- Mail -->
  <doc:DetailTrunkSubtree itsName="MailSubtree">
    <key itemref="mail:MailMessage"/>
    <rootBlocks itemref="doc:FromArea"/>
    <rootBlocks itemref="doc:ToMailArea"/>
    <rootBlocks itemref="doc:AcceptShareButton"/>
    <rootBlocks itemref="doc:AttachmentArea"/>
  </doc:DetailTrunkSubtree>

  <!-- Item Collection -->
  <doc:DetailTrunkSubtree itsName="ItemCollectionSubtree">
    <key itemref="content:ItemCollection"/>
    <rootBlocks itemref="doc:ParticipantsArea"/>
    <rootBlocks itemref="doc:InviteArea"/>
    <rootBlocks itemref="doc:HeadlineBlock"/>
    <rootBlocks itemref="doc:SharingActiveArea"/>
    <rootBlocks itemref="doc:NotesArea"/>
  </doc:DetailTrunkSubtree>
  
  <!--
  The subtree blocks
  -->

  <!-- MarkupBar -->
  <Toolbar itsName="MarkupBar"
           itemClass="osaf.framework.blocks.detail.Detail.MarkupBar">
    <blockName>MarkupBar</blockName>
    <!-- Children Blocks-->
    <childrenBlocks itemref="doc:MailMessageButton"/>
    <childrenBlocks itemref="doc:TaskStamp"/>
    <childrenBlocks itemref="doc:CalendarStamp"/>
    <childrenBlocks itemref="doc:ToolbarItemSeparator"/>
    <childrenBlocks itemref="doc:PrivateSwitchButton"/>
    <!-- Attributes -->
    <position>0.0</position>
    <toolSize>20,20</toolSize>
    <separatorWidth>16</separatorWidth>
    <stretchFactor>0.0</stretchFactor>
  </Toolbar>

  <!--
    ToolbarItems
  -->
  <ToolbarItem itsName="MailMessageButton"
               itemClass="osaf.framework.blocks.detail.Detail.MailMessageButton">
    <blockName>MailMessageButton</blockName>
    <title>Send as message</title>
    <bitmap>MarkupBarMail.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <toggle>True</toggle>
    <helpString>Send this item as a mail message</helpString>
    <event itemref="doc:ButtonPressed"/>
  </ToolbarItem>

  <ToolbarItem itsName="TaskStamp"
               itemClass="osaf.framework.blocks.detail.Detail.TaskStamp">
    <blockName>TaskStamp</blockName>
    <title>Put on Taskpad</title>
    <bitmap>MarkupBarTask.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <toggle>True</toggle>
    <helpString>Put this item onto the Taskpad</helpString>
    <event itemref="doc:ButtonPressed"/>
  </ToolbarItem>

  <ToolbarItem itsName="CalendarStamp"
               itemClass="osaf.framework.blocks.detail.Detail.CalendarStamp">
    <blockName>CalendarStamp</blockName>
    <title>Put on Calendar</title>
    <bitmap>MarkupBarEvent.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <toggle>True</toggle>
    <helpString>Put this item onto the Calendar</helpString>
    <event itemref="doc:ButtonPressed"/>
  </ToolbarItem>
  
  <ToolbarItem itsName="ToolbarItemSeparator">
    <blockName></blockName>
    <toolbarItemKind>Separator</toolbarItemKind>
  </ToolbarItem>
  
  <ToolbarItem itsName="PrivateSwitchButton"
               itemClass="osaf.framework.blocks.detail.Detail.PrivateSwitchButton">
    <blockName>PrivateSwitchButton</blockName>
    <title>Never share this item</title>
    <bitmap>MarkupBarPrivate.png</bitmap>
    <toolbarItemKind>Button</toolbarItemKind>
    <toggle>True</toggle>
    <helpString>Never share this item</helpString>
    <event itemref="doc:TogglePrivate"/>
  </ToolbarItem>
 
